groups:
- name: alert.rules
  rules:
  - alert: InstanceDown
    expr: up == 0
    for: 1m
    labels:
      severity: "critical"
    annotations:
      summary: "Endpoint {{ $labels.instance }} down"
      description: "{{ $labels.instance }} of job {{ $labels.job }} has been down for more than 1 minutes."
groups:
- name: ip.rules
  - alert: TooManyFloatingIPs
    expr: neutron_public_ip_usage{tenant="s4_project",ip_type="floatingip",ip_status="ACTIVE"} > 19
    for: 1m
    labels:
      severity: "critical"
    annotations:
      summary: "Test Alert"
      description: "Too many Floating IP used by s4_project"

